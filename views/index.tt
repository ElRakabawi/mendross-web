<div class="wrapper">
  <center>
      <div class="container-fluid">
          <div class="row">
              <div class="col-md-12">
                  <h1>Welcome to Mendross!</h1>
                  <p class="lead">Ready for crossing!</p>

              </div>
          </div>
      </div>
  </center>
  <form method="POST" role="form" action="/cross">
    <div class="form-group">
      <label for="exampleSelect1">Type of inheritance: </label>
      <select class="form-control" id="genes" name="gene">
        <option value="1">Monohybrid</option>
        <option value="2">Dihybrid</option>
        <option value="3">Trihybrid</option>
      </select>
    </div>
    <div class="form-group">
      <label for="exampleTextarea">Parental genotype: </label>
      <input type="text" class="form-control" id="pog" name="pog">
    </div>
    <div class="form-group">
      <label for="exampleTextarea">Marental genotype: </label>
      <input type="text" class="form-control" id="ptg" name="ptg">
    </div>
    <button id="btn" type="submit" class="btn btn-primary">Cross</button>
  </form>
  <div id="Pun_Sq">
    <center>
        <p class="h3">Punett square</p>
    </center>
    <table id="datatable" class="table table-hover table-inverse">
      <thead>
        <tr>
          <th><% r00 %></th>
          <th><% r01 %></th>
          <th><% r02 %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row"><% r10 %></th>
          <td><% r11 %></td>
          <td><% r12 %></td>
        </tr>
        <tr>
          <th scope="row"><% r20 %></th>
          <td><% r21 %></td>
          <td><% r22 %></td>
        </tr>
      </tbody>
    </table>

    <h1><% ifWorked %></h1>
    <table id="datatable" class="table table-hover bordered">
      <thead>
        <tr>
          <th><% r00 %></th>
          <th><% r01 %></th>
          <th><% r02 %></th>
          <th><% r03 %></th>
          <th><% r04 %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row"><% r10 %></th>
          <td><% r11 %></td>
          <td><% r12 %></td>
          <td><% r13 %></td>
          <td><% r14 %></td>
        </tr>
        <tr>
          <th scope="row"><% r20 %></th>
          <td><% r21 %></td>
          <td><% r22 %></td>
          <td><% r23 %></td>
          <td><% r24 %></td>
        </tr>
        <tr>
          <th scope="row"><% r30 %></th>
          <td><% r31 %></td>
          <td><% r32 %></td>
          <td><% r33 %></td>
          <td><% r34 %></td>
        </tr>
        <tr>
          <th scope="row"><% r40 %></th>
          <td><% r41 %></td>
          <td><% r42 %></td>
          <td><% r43 %></td>
          <td><% r44 %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
