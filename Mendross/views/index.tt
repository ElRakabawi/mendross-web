<div class="wrapper">
  <center>
      <div class="container-fluid">
          <div class="row">
              <div class="col-md-12">
                  <h1>Welcome to Mendross!</h1>
                  <p class="lead">Ready for crossing!</p>

              </div>
          </div>
      </div>
  </center>
  <form method="POST" action="/post">
    <div class="form-group">
      <label for="exampleSelect1">Type of inheritance: </label>
      <select class="form-control" id="genes" name="mono">
        <option>Monohybrid</option>
        <option>Dihybrid</option>
        <option>Trihybrid</option>
      </select>
    </div>
    <div class="form-group">
      <label for="exampleTextarea">Parental genotype: </label>
      <textarea class="form-control" id="POG" rows="1" name"pog"></textarea>
    </div>
    <div class="form-group">
      <label for="exampleTextarea">Marental genotype: </label>
      <textarea class="form-control" id="PTG" rows="1" name"ptg"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Cross</button>
  </form>

  <center>
      <p class="h3">Punett square</p>
  </center>

  <table id="datatable" class="table table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>A</th>
        <th>a</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">A</th>
        <td bgcolor="black">AA</td>
        <td>Aa</td>
      </tr>
      <tr>
        <th scope="row">a</th>
        <td>Aa</td>
        <td>aa</td>
      </tr>
    </tbody>
  </table>
</div>
